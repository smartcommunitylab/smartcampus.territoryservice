<service xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../../resource.api/src/main/resources/jaxb/binding/resourceTemplateSchema.xsd">

	<!-- events data -->
	<resourceMapping uri="territoryservice.data.read"
		pathPattern="/events/{eventId}" method="GET" />
	<resourceMapping uri="territoryservice.data.read"
		pathPattern="/events" method="GET" />
	<resourceMapping uri="territoryservice.data.user.write"
		pathPattern="/events/{eventId}" method="PUT,DELETE" />
	<resourceMapping uri="territoryservice.data.user.write"
		pathPattern="/events" method="POST" />

	<!-- POI data -->
	<resourceMapping uri="territoryservice.data.read"
		pathPattern="/pois/{poiId}" method="GET" />
	<resourceMapping uri="territoryservice.data.read"
		pathPattern="/pois" method="GET" />
	<resourceMapping uri="territoryservice.data.user.write"
		pathPattern="/pois/{poiId}" method="PUT,DELETE" />
	<resourceMapping uri="territoryservice.data.user.write"
		pathPattern="/pois" method="POST" />

	<!-- story data -->
	<resourceMapping uri="territoryservice.data.read"
		pathPattern="/stories/{storyId}" method="GET" />
	<resourceMapping uri="territoryservice.data.read"
		pathPattern="/stories" method="GET" />
	<resourceMapping uri="territoryservice.data.user.write"
		pathPattern="/stories/{storyId}" method="PUT,DELETE" />
	<resourceMapping uri="territoryservice.data.user.write"
		pathPattern="/stories" method="POST" />

	<!-- common operations -->
	<resourceMapping uri="territoryservice.communitydata.write"
		pathPattern="/objects/{id}/rate" method="PUT" />
	<resourceMapping uri="territoryservice.communitydata.write"
		pathPattern="/objects/{id}/attend" method="PUT" />
	<resourceMapping uri="territoryservice.communitydata.write"
		pathPattern="/objects/{id}/notAttend" method="PUT" />
  <resourceMapping uri="territoryservice.communitydata.write"
    pathPattern="/objects/{id}/follow" method="PUT" />
  <resourceMapping uri="territoryservice.communitydata.write"
    pathPattern="/objects/{id}/unfollow" method="PUT" />
	<resourceMapping uri="territoryservice.data.read"
    pathPattern="/sync" method="POST" />
	

</service>



